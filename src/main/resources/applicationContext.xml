<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="countingConnectionMaker" class="CountingConnectionMaker">
        <property name="realConnectionMaker" ref="connectionMaker"></property>

    </bean>
    <bean id="connectionMaker" class="DConnectionMaker"/>

    <bean id="countingUserDao" class="UserDao">
        <property name="connectionMaker" ref="countingConnectionMaker"/>
    </bean>

    <bean id="userDao" class="UserDao">
        <property name="connectionMaker" ref="connectionMaker"/>
    </bean>

</beans>